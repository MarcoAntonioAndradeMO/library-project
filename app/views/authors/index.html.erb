<p style="color: green"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-8">
      <h1 class="h2 mt-4 mb-4">Autores</h1>
      <div class="input-group mb-5 align-items-center">
        <span class="h5 ps-4">Período da Pesquisa: </span><label class="ms-2" for="inicio">De: </label>
        <input id="data-inicio" class="form-control ms-2" type="date" /><label class="ms-2" for="final">Até: </label>
        <input id="data-final" class="form-control ms-2" type="date" />
      </div>
    </div>
  </div>
</div>

<div class="container d-flex justify-content-end p-3">
  <%= link_to "Novo Autor", new_author_path , :class => "btn btn-primary"%>
</div>

<div class="container">
  <div class="table-responsive">
    <table class="table">
      <thead>
      <tr>
        <th>Nome</th>
        <th>Assinatura</th>
        <th>Editar</th>
        <th>Deletar</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @authors.each do |author| %>
        <tr>
          <td><%= author.proper_name %></td>
          <td><%= author.signature %></td>
          <td><%= link_to "Editar", edit_author_path(author), :class => "btn btn-primary" %></td>
          <td><%= link_to "Deletar", author, method: :delete, data: {confirm: ("Tem certeza que deseja apagar ?")}, :class => "btn btn-primary" %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
