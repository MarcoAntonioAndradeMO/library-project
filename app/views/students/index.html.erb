<p style="color: green"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-8">
      <h1 class="h2 mt-4 mb-4">Alunos</h1>
    </div>
  </div>
</div>

<div class="container d-flex justify-content-end p-3">
  <%= link_to "Novo Aluno", new_student_path, :class => "btn btn-primary" %>
</div>

<div class="container">
  <div class="table-responsive">
    <table class="table">
      <thead>
      <tr>
        <th>Nome</th>
        <th>Matrícula</th>
        <th>Curso</th>
        <th>CPF</th>
        <th>Editar</th>
        <th>Deletar</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @students.each do |student| %>
        <tr>
          <td><%= student.proper_name %></td>
          <td><%= student.registration %></td>
          <td><%= student.course %></td>
          <td><%= student.cpf %></td>
          <td><%= link_to "Editar", edit_student_path(student), :class => "btn btn-primary" %></td>
          <td><%= link_to "Deletar", student, method: :delete, data: {confirm: ("Tem certeza que deseja apagar ?")}, :class => "btn btn-primary" %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

<table>
  <thead>
  <tr>
    <th>Aluno</th>
    <th>Qtd. de Empréstimos</th>
  </tr>
  </thead>
  <tbody>
  <% @top_students_loans.each do |student, index| %>
    <tr>
      <td><%= student.proper_name %></td>
      <td><%= student.loan_count %></td>
    </tr>
  <% end %>
  </tbody>
</table>

