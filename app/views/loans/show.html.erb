<body data-turbo="false">
  <p style="color: green"><%= notice %></p>

  <h1>Detalhes do Empréstimo</h1><br>

  <div class="ms-2">
    <%= render @loan %>
  </div>

<!--  <div class="d-flex justify-content-lg-end">-->
<!--    <button type="button" class="btn btn-primary" id="add-book" data-bs-toggle="modal" data-bs-target="#modalBook">Adicionar Livro</button>-->
<!--  </div>-->

  <div class="modal" id="modalBook" >
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Adicionando um Livro no Empréstimo</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <%= form_with(url: add_book_loan_path(@loan), method: :post) do |form| %>
            <div class="field pb-2">
              <%= form.label :book_id, "Nome do Livro:" %><br>
              <%= form.collection_select :book_id, Book.all, :id, :book_name, {}, class: "form-select" %>
            </div>
            <button type="submit" class="btn btn-primary add_theme">Adicionar Livro</button>
          <% end %>
        </div>
      </div>
    </div>
  </div>



  <div class="p-3">
    <div class="p-3">
      <%= link_to "Voltar", loans_path, :class => "btn btn-primary" %>
      <%= link_to "Editar", edit_loan_path(@loan), :class => "btn btn-primary" %>
    </div>
    <%= button_to "Apagar Empréstimo", @loan, method: :delete, :class => "btn btn-danger" %>
  </div>


</body>


